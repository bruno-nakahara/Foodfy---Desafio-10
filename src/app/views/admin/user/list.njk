{% extends "admin.njk" %}

{% block content %}
    <section class="user-list container form">
        <div class="title-admin">
            <h2>Usu√°rios</h2>
            <div class="button user-button">
                <a href="users/create"><button class="new-user-btn" type="submit">Novo</button></a>
            </div>
            
        </div>

        <div class="users-list">
            {% for user in users %}
                <form id="form-user-delete" action="/admin/users/{{user.id}}?_method=DELETE" method="POST">
                    <div class="user-field">
                        <h3>{{user.name}}</h3>
                        <p>{{user.email}}</p>
                        <div class="links">
                            <a href="users/{{user.id}}/edit" class="link-edit">Editar</a>
                            <button class="user-delete-btn" type="submit">Remover</button>
                        </div>
                        <input type="hidden" name="id" value="{{user.id}}">
                    </div>
                </form>
            {% endfor %}
        </div>
    </section>
{% endblock %}