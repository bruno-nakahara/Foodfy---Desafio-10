{% extends "login-layout.njk" %}

{% block content %}
    <section class="login-forgot container form">
        <form action="/admin/users/forgot-password" method="post">
            <div class="header">
                <h3>Esqueceu a Senha?</h3>
            </div>
            <div class="fields">
                <div>
                    <h4>Email</h4>
                    <input type="email" name="email" value="{{user.email}}" class="input-create" placeholder="Digite o seu email para recuperar a sua senha">
                </div>
            </div>
    
            <button class="button" type="submit">Recuperar</button>
            
        </form>
    </section>

{% endblock %}