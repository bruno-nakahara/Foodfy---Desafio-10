{% extends "login-layout.njk" %}

{% block content %}
    <section class="password-reset container form">
        <form action="/admin/users/password-reset" method="post">
            <div class="header">
                <h3>Nova Senha</h3>
            </div>
            <div class="fields">
                <div>
                    <h4>Email</h4>
                    <input type="email" name="email" value="{{user.email}}" class="input-create" placeholder="Digite seu email">
                </div>
                <div>
                    <h4>Nova senha</h4>
                    <input type="password" name="password" value="{{user.password}}" class="input-create" placeholder="Digite sua nova senha">
                </div>
                <div>
                    <h4>Repetir senha</h4>
                    <input type="password" name="passwordRepeat" value="{{user.passwordRepeat}}" class="input-create" placeholder="Repita a nova senha">
                </div>
            </div>
            <input type="hidden" name="token" value="{{ token }}">
    
            <button class="button" type="submit">Nova Senha</button>
            
        </form>
    </section>

{% endblock %}